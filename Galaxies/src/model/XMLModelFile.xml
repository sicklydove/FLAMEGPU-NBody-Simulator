<?xml version="1.0" encoding="utf-8"?>
<gpu:xmodel xmlns:gpu="http://www.dcs.shef.ac.uk/~paul/XMMLGPU"
        xmlns="http://www.dcs.shef.ac.uk/~paul/XMML">
  <name>Galaxy Formation</name>
  <gpu:environment>
    <gpu:constants>
      <gpu:variable>
        <type>float</type>
        <name>DELTA_T</name>
      </gpu:variable>
      <gpu:variable>
        <type>float</type>
        <name>GRAV_CONST</name>
      </gpu:variable>
      <gpu:variable>
        <type>float</type>
        <name>VELOCITY_DAMP</name>
      </gpu:variable>
      <gpu:variable>
        <type>float</type>
        <name>MIN_INTERRACTION_RAD</name>
      </gpu:variable>
      <gpu:variable>
        <type>int</type>
        <name>NUM_PARTITIONS</name>
      </gpu:variable>
      <gpu:variable>
        <type>int</type>
        <name>SIMULATION_ITNUM</name>
      </gpu:variable>
    </gpu:constants>
    <gpu:functionFiles>
      <file>functions.c</file>
    </gpu:functionFiles>
    <gpu:initFunctions>
      <gpu:initFunction>
        <gpu:name>initConstants</gpu:name>
      </gpu:initFunction>
    </gpu:initFunctions>
  </gpu:environment>

  <xagents>
    <gpu:xagent>
      <name>Particle</name>
      <description>Simple particle</description>
      <memory>
        <gpu:variable>
          <type>int</type>
          <name>id</name>
        </gpu:variable>
        <gpu:variable>
          <type>int</type>
          <name>isDark</name>
        </gpu:variable>
        <gpu:variable>
          <type>int</type>
          <name>isActive</name>
        </gpu:variable>
        <gpu:variable>
          <type>int</type>
          <name>particleGroup</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>mass</name>
        </gpu:variable>

        <gpu:variable>
          <type>float</type>
          <name>x</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>y</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>z</name>
        </gpu:variable>

        <gpu:variable>
          <type>float</type>
          <name>xVel</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>yVel</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>zVel</name>
        </gpu:variable>

        <gpu:variable>
          <type>float</type>
          <name>debug1</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>debug2</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>debug3</name>
        </gpu:variable>
      </memory>

      <functions>
        <gpu:function>
          <name>setIsActive</name>
          <description></description>
          <currentState>testingActive</currentState>
          <nextState>testingActive</nextState>
          <gpu:reallocate>false</gpu:reallocate>
          <gpu:RNG>false</gpu:RNG>
        </gpu:function>

        <gpu:function>
          <name>broadcastAndMoveState</name>
          <currentState>testingActive</currentState>
          <nextState>updatingPosition</nextState>
          <outputs>
            <gpu:output>
              <messageName>particleVariables</messageName>
              <gpu:type>single_message</gpu:type>
            </gpu:output>
          </outputs>
          <condition>
            <lhs>
              <agentVariable>isActive</agentVariable>
            </lhs>
            <operator>&gt;</operator>
            <rhs>
              <value>0</value>
            </rhs>
          </condition>
          <gpu:reallocate>false</gpu:reallocate>
          <gpu:RNG>false</gpu:RNG>
        </gpu:function>

        <gpu:function>
          <name>broadcastAndKeepState</name>
          <currentState>testingActive</currentState>
          <nextState>testingActive</nextState>
          <outputs>
            <gpu:output>
              <messageName>particleVariables</messageName>
              <gpu:type>single_message</gpu:type>
            </gpu:output>
          </outputs>
          <condition>
            <lhs>
              <agentVariable>isActive</agentVariable>
            </lhs>
            <operator>&lt;</operator>
            <rhs>
              <value>1</value>
            </rhs>
          </condition>
          <gpu:reallocate>false</gpu:reallocate>
          <gpu:RNG>false</gpu:RNG>
        </gpu:function>

        <gpu:function>
          <name>updatePosition</name>
          <currentState>updatingPosition</currentState>
          <nextState>testingActive</nextState>
          <inputs>
            <gpu:input>
              <messageName>particleVariables</messageName>
            </gpu:input>
          </inputs>
          <gpu:reallocate>false</gpu:reallocate>
          <gpu:RNG>false</gpu:RNG>
        </gpu:function>
      </functions>

      <states>
        <gpu:state>
          <name>testingActive</name>
        </gpu:state>
        <gpu:state>
          <name>updatingPosition</name>
        </gpu:state>
        <initialState>testingActive</initialState>
      </states>
      <gpu:type>continuous</gpu:type>
      <gpu:bufferSize>65536</gpu:bufferSize>
    </gpu:xagent>
  </xagents>
  
  <messages>
    <gpu:message>
      <name>particleVariables</name>
      <description>A message holding agent location and mass</description>
      <variables>
        <gpu:variable>
          <type>float</type>
          <name>mass</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>x</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>y</name>
        </gpu:variable>
        <gpu:variable>
          <type>float</type>
          <name>z</name>
        </gpu:variable>
      </variables>
      <gpu:partitioningNone/>
      <gpu:bufferSize>65536</gpu:bufferSize>
    </gpu:message>

  </messages>

  <layers>
    <layer>
      <gpu:layerFunction>
        <name>setIsActive</name>
      </gpu:layerFunction>
    </layer>
    <layer>
      <gpu:layerFunction>
        <name>broadcastAndKeepState</name>
      </gpu:layerFunction>
      <gpu:layerFunction>
        <name>broadcastAndMoveState</name>
      </gpu:layerFunction>
    </layer>
    <layer>
      <gpu:layerFunction>
        <name>updatePosition</name>
      </gpu:layerFunction>
    </layer>
  </layers>
</gpu:xmodel>